{
  "name": "sveld",
  "version": "0.3.0",
  "license": "Apache-2.0",
  "description": "Generate TypeScript definitions for your Svelte components.",
  "author": "Eric Liu (https://github.com/metonym)",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "build:watch": "tsc -w",
    "test": "run-p test:*",
    "test:unit": "tsnd node_modules/tape/bin/tape tests/*.test.ts",
    "test:svelte-check": "svelte-check --workspace tests/check",
    "test:integration": "node tests/integration",
    "format": "prettier --write '{src,tests}/**/*.ts'",
    "prepack": "run-s build test"
  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^10.0.0",
    "comment-parser": "^0.7.6",
    "fs-extra": "^9.0.1",
    "prettier": "^2.2.0",
    "rollup": "^2.33.3",
    "rollup-plugin-svelte": "^6.1.1",
    "svelte": "^3.30.0"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^1.0.10",
    "@types/fs-extra": "^9.0.4",
    "@types/node": "^14.14.10",
    "@types/prettier": "^2.1.5",
    "@types/tape": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "svelte-check": "^1.1.17",
    "tape": "^5.0.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.2"
  },
  "bin": {
    "sveld": "./cli.js"
  },
  "files": [
    "lib",
    "cli.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ibm/sveld.git"
  },
  "homepage": "https://github.com/ibm/sveld",
  "bugs": "https://github.com/ibm/sveld/issues",
  "keywords": [
    "svelte",
    "svelte component",
    "documentation",
    "docgen",
    "typescript",
    "definitions",
    "JSDocs"
  ],
  "prettier": {
    "printWidth": 120
  }
}
